{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist",
        "types": ["node"],
        "target": "es5",
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src/**/*"]
}
